---
import '../styles/global.css';
import Demo from '../components/ui/demo';
import { WordStack } from '../components/ui/word-stack';
import { SpotlightCard } from '../components/ui/spotlight-card';
import { Layers, ShieldCheck, Zap, TrendingUp } from 'lucide-react';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
		<title>Leading Fintech Development Company | Panasa Tech</title>
	</head>
	<body class="m-0 p-0 overflow-x-hidden">
		<Demo client:load>
			<div class="relative z-10 min-h-screen flex flex-col">
				<!-- Header -->
				<header class="w-full px-6 pt-12 pb-6 md:px-12 md:pt-16 md:pb-8 relative z-20">
					<nav class="max-w-7xl mx-auto flex items-center justify-between">
						<div class="flex items-center space-x-3">
							<img src="/images/logo.png" alt="Panasa Logo" class="h-12 w-auto" />

						</div>
						<div class="hidden md:flex items-center space-x-8">
							<a href="#features" class="text-white hover:text-[#ffae9b] transition-colors">Features</a>
							<a href="#about" class="text-white hover:text-[#ffae9b] transition-colors">About</a>
							<a href="#contact" class="text-white hover:text-[#ffae9b] transition-colors">Contact</a>
							<button class="px-6 py-2 bg-white text-[#0C2F1E] rounded-lg hover:bg-[#ffae9b] hover:text-white transition-colors">
								Get Started
							</button>
						</div>
					</nav>
				</header>

				<!-- Hero Section -->
				<main class="flex items-center justify-center px-6 md:px-12 relative z-20 mt-20">
					<div class="max-w-7xl mx-auto w-full py-12">
						<div class="text-center space-y-8 pt-17">
							<h1 class="text-5xl md:text-7xl font-bold text-[#ffae9b] leading-tight drop-shadow-lg">
								Building Better FinTech.
								<br />

							</h1>
							<p class="text-xl md:text-2xl text-[#f5f5f5] max-w-3xl mx-auto font-light drop-shadow-md" style="font-family: 'Poppins', sans-serif;">
								Panasa is a fintech development company that helps
								companies competitively innovate existing tech, design and build new products, and test-run new ideas.

							</p>
							<div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-8">
								<button class="px-8 py-4 bg-white text-[#0C2F1E] rounded-lg hover:bg-[#ffae9b] hover:text-white transition-all hover:scale-105 font-semibold text-lg shadow-lg shadow-[#0C2F1E]/20">
									Start Building
								</button>
								<button class="px-8 py-4 bg-white/10 backdrop-blur-sm text-white border-2 border-white rounded-lg hover:bg-white hover:text-[#0C2F1E] transition-all font-semibold text-lg">
									Learn More
								</button>
							</div>
						</div>
					</div>
				</main>

				<!-- Word Stack Section -->
				<div class="w-full bg-[#DDF8E7]">
					<WordStack
						client:load
						items={['prototype.', 'solve.', 'build.', 'develop.', 'innovate.', 'transform.']}
					/>
				</div>

				<!-- Platform Features Section -->
				<section class="w-full py-20 bg-black">
					<div class="max-w-6xl mx-auto px-6 md:px-12">
						<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
							<!-- Card 1: Flexible Account Structures -->
							<SpotlightCard client:load className="p-6 h-full flex flex-col gap-4">
								<div class="h-10 w-10 flex items-center justify-center rounded-lg bg-neutral-800 border border-neutral-700">
									<Layers className="text-white h-5 w-5" />
								</div>
								<div>
									<h3 class="text-lg font-semibold text-white mb-2">Flexible Account Structures</h3>
									<p class="text-sm text-neutral-400">
										Our platform was designed to work with any business type and model, supporting your unique needs.
									</p>
								</div>
							</SpotlightCard>

							<!-- Card 2: Full Program Management -->
							<SpotlightCard client:load className="p-6 h-full flex flex-col gap-4" spotlightColor="rgba(14, 165, 233, 0.25)">
								<div class="h-10 w-10 flex items-center justify-center rounded-lg bg-sky-900/20 border border-sky-800/50">
									<ShieldCheck className="text-sky-400 h-5 w-5" />
								</div>
								<div>
									<h3 class="text-lg font-semibold text-white mb-2">Full Program Management</h3>
									<p class="text-sm text-neutral-400">
										We are with you every step of the way, from implementation to ongoing program optimization.
									</p>
								</div>
							</SpotlightCard>

							<!-- Card 3: World-Class Dashboard -->
							<SpotlightCard client:load className="p-6 h-full flex flex-col gap-4" spotlightColor="rgba(168, 85, 247, 0.25)">
								<div class="h-10 w-10 flex items-center justify-center rounded-lg bg-purple-900/20 border border-purple-800/50">
									<Zap className="text-purple-400 h-5 w-5" />
								</div>
								<div>
									<h3 class="text-lg font-semibold text-white mb-2">World-Class Dashboard</h3>
									<p class="text-sm text-neutral-400">
										Streamline your operations and support your customers from our user-friendly Dashboard.
									</p>
								</div>
							</SpotlightCard>

							<!-- Card 4: Designed for Scale -->
							<SpotlightCard client:load className="p-6 h-full flex flex-col gap-4" spotlightColor="rgba(16, 185, 129, 0.25)">
								<div class="h-10 w-10 flex items-center justify-center rounded-lg bg-emerald-900/20 border border-emerald-800/50">
									<TrendingUp className="text-emerald-400 h-5 w-5" />
								</div>
								<div>
									<h3 class="text-lg font-semibold text-white mb-2">Designed for Scale</h3>
									<p class="text-sm text-neutral-400">
										Our secure platform scales with you and is trusted by developers, startups, and large corporations.
									</p>
								</div>
							</SpotlightCard>
						</div>
					</div>
				</section>

				<!-- Aesthetic Wave Separator -->
				<div class="relative w-full overflow-hidden bg-[#DDF8E7]">
					<svg
						class="w-full"
						viewBox="0 0 1440 120"
						fill="none"
						xmlns="http://www.w3.org/2000/svg"
						preserveAspectRatio="none"
						style="display: block;"
					>
						<!-- Smooth wave transition -->
						<path
							d="M0,40 Q360,10 720,40 T1440,40 L1440,120 L0,120 Z"
							fill="white"
						/>
					</svg>
				</div>

				<!-- Features Section -->
				<main class="px-6 md:px-12 bg-white">
					<div class="max-w-7xl mx-auto w-full py-20">
						<!-- Features Grid -->
						<div class="grid md:grid-cols-3 gap-8 mt-24">
							<div class="p-8 bg-white/80 backdrop-blur-sm rounded-2xl border border-gray-200 hover:border-[#0C2F1E]/30 hover:shadow-xl transition-all">
								<div class="w-12 h-12 bg-[#0C2F1E]/10 rounded-lg flex items-center justify-center mb-4">
									<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-[#0C2F1E]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-2">Lightning Fast</h3>
								<p class="text-gray-600">
									Built with Astro for optimal performance and blazing fast load times.
								</p>
							</div>

							<div class="p-8 bg-white/80 backdrop-blur-sm rounded-2xl border border-gray-200 hover:border-[#0C2F1E]/30 hover:shadow-xl transition-all">
								<div class="w-12 h-12 bg-[#0C2F1E]/10 rounded-lg flex items-center justify-center mb-4">
									<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-[#0C2F1E]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-2">Beautiful Design</h3>
								<p class="text-gray-600">
									Crafted with Tailwind CSS for stunning, responsive designs.
								</p>
							</div>

							<div class="p-8 bg-white/80 backdrop-blur-sm rounded-2xl border border-gray-200 hover:border-[#0C2F1E]/30 hover:shadow-xl transition-all">
								<div class="w-12 h-12 bg-[#0C2F1E]/10 rounded-lg flex items-center justify-center mb-4">
									<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-[#0C2F1E]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
									</svg>
								</div>
								<h3 class="text-xl font-bold text-gray-900 mb-2">Developer Friendly</h3>
								<p class="text-gray-600">
									TypeScript, React, and modern tooling for the best developer experience.
								</p>
							</div>
						</div>
					</div>
				</main>

				<!-- Footer -->
				<footer class="w-full px-6 py-8 md:px-12 border-t border-gray-200 bg-white/50 backdrop-blur-sm">
					<div class="max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4">
						<p class="text-gray-600 text-sm">
							Â© 2025 Panasa. Built with Astro, React & Tailwind CSS.
						</p>
						<div class="flex items-center gap-6">
							<a href="#" class="text-gray-600 hover:text-[#0C2F1E] transition-colors">GitHub</a>
							<a href="#" class="text-gray-600 hover:text-[#0C2F1E] transition-colors">Twitter</a>
							<a href="#" class="text-gray-600 hover:text-[#0C2F1E] transition-colors">LinkedIn</a>
						</div>
					</div>
				</footer>
			</div>
		</Demo>
	</body>
</html>
