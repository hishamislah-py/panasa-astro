---
import '../styles/global.css';
import { InfiniteGridBackground } from '../components/ui/infinite-grid-background';
import { SpotlightCard } from '../components/ui/spotlight-card';
import { InfiniteSlider } from '../components/ui/infinite-slider';
import { HorizontalCards } from '../components/ui/horizontal-cards';
import { ProductHighlightCard } from '../components/ui/product-card';
import { Layers, ShieldCheck, Zap, TrendingUp } from 'lucide-react';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
		<title>Leading Fintech Development Company | Panasa Tech</title>
	</head>
	<body class="m-0 p-0 overflow-x-hidden bg-white">
		<InfiniteGridBackground client:load className="min-h-screen">
			<div class="relative z-10 min-h-screen flex flex-col">
				<!-- Header -->
				<header class="w-full px-6 pt-12 pb-6 md:px-12 md:pt-16 md:pb-8 relative z-20">
					<nav class="max-w-7xl mx-auto flex items-center justify-between">
						<div class="flex items-center space-x-3">
							<img src="/images/logo-with-dot-2.png" alt="Panasa Logo" class="h-12 w-auto" />

						</div>
						<div class="hidden md:flex items-center space-x-8">
							<a href="#features" class="text-gray-900 hover:text-[#ffae9b] transition-colors">Features</a>
							<a href="#about" class="text-gray-900 hover:text-[#ffae9b] transition-colors">About</a>
							<a href="#contact" class="text-gray-900 hover:text-[#ffae9b] transition-colors">Contact</a>
							<button class="px-6 py-2 bg-[#0C2F1E] text-white rounded-lg hover:bg-[#ffae9b] hover:text-white transition-colors">
								Get Started
							</button>
						</div>
					</nav>
				</header>

				<!-- Hero Section -->
				<main class="flex items-center px-6 md:px-12 relative z-20 mt-20">
					<!-- SVG Background -->
					<svg class="absolute inset-0 w-full h-full z-0" xmlns="http://www.w3.org/2000/svg">
						<use xlink:href="/static/svg/symbol/svg/sprite.symbol.svg#background-white-1440"></use>
					</svg>

					<div class="max-w-7xl mx-auto w-full py-4 relative z-10">
						<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
							<!-- Left side - Text content -->
							<div class="max-w-2xl space-y-8">
								<h1 class="text-5xl md:text-7xl text-[#0C2F1E] leading-tight" style="font-family: 'Helvetica Now Display', 'Helvetica Neue', Helvetica, Arial, sans-serif; font-weight: 400;">
									Building Better FinTech.
								</h1>
								<p class="text-xl md:text-2xl text-gray-700 font-light" style="font-family: 'Poppins', sans-serif;">
									Panasa is a fintech development company that helps
									companies competitively innovate existing tech, design and build new products, and test-run new ideas.
								</p>
								<div class="flex flex-col sm:flex-row items-start gap-4 pt-4">
									<button class="px-8 py-4 bg-[#0C2F1E] text-white rounded-lg hover:bg-[#ffae9b] hover:text-white transition-all hover:scale-105 font-semibold text-lg shadow-lg">
										Start Building
									</button>
									<button class="px-8 py-4 bg-transparent text-[#0C2F1E] border-2 border-[#0C2F1E] rounded-lg hover:bg-[#0C2F1E] hover:text-white transition-all font-semibold text-lg">
										Learn More
									</button>
								</div>
							</div>

							<!-- Right side - Product Card -->
							<div class="flex justify-center lg:justify-end">
								<ProductHighlightCard
									client:load
									category="Payment Solutions"
										title="Card Issuing"
									description="Fast, secure, and scalable payment solutions for modern businesses. Built for growth and reliability."
									imageSrc="https://images.unsplash.com/photo-1563013544-824ae1b704d3?w=400&q=80"
									imageAlt="Credit card payment solution"
								/>
							</div>
						</div>
					</div>
				</main>

				<!-- Green Gradient Section Above Triangle -->
				<div class="w-full h-[150px] relative pointer-events-none">
					<div class="absolute bottom-0 left-0 w-full h-full bg-gradient-to-t from-emerald-500/20 via-emerald-500/10 to-transparent"></div>
				</div>

				<!-- Triangle Separator -->
				<div class="w-full relative -mb-1 -mt-[150px]">
					<svg data-name="Layer 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none" class="w-full h-[80px] md:h-[120px]">
						<path d="M598.97 114.72L0 0 0 120 1200 120 1200 0 598.97 114.72z" fill="#f5f5f5" fill-opacity="1"></path>
					</svg>
				</div>

				<!-- Partners & Purpose Section -->
				<section class="w-full py-20 bg-[#f5f5f5] relative">
					<div class="max-w-7xl mx-auto px-6 md:px-12 relative z-10">
						<!-- Header Text -->
						<div class="text-center mb-16">
							<p class="text-lg md:text-xl text-gray-800 font-medium mb-2">
								Powering modern payment solutions.
							</p>
							<p class="text-lg md:text-xl text-gray-800 font-medium">
								From visionary startups to industry leaders.
							</p>
						</div>

						<!-- Company Logos Carousel -->
						<div class="mb-20">
							<InfiniteSlider client:load gap={48} duration={30} reverse className="py-8">
								<div class="flex items-center justify-center h-[80px] px-8">
									<span class="text-3xl font-bold text-gray-900">AtoB</span>
								</div>
								<div class="flex items-center justify-center h-[80px] px-8">
									<span class="text-3xl font-bold text-gray-900">Gynger</span>
								</div>
								<div class="flex items-center justify-center h-[80px] px-8">
									<span class="text-3xl font-bold text-gray-900">SpotOn</span>
								</div>
								<div class="flex items-center justify-center h-[80px] px-8">
									<span class="text-3xl font-bold text-gray-900">GiveCard</span>
								</div>
								<div class="flex items-center justify-center h-[80px] px-8">
									<span class="text-3xl font-bold text-gray-900">MUDFLAP</span>
								</div>
								<div class="flex items-center justify-center h-[80px] px-8">
									<span class="text-3xl font-bold text-gray-900">splitit</span>
								</div>
								<div class="flex items-center justify-center h-[80px] px-8">
									<span class="text-3xl font-bold text-gray-900">NETEVIA</span>
								</div>
							</InfiniteSlider>
						</div>

						<!-- Main Purpose Heading -->
						<div class="text-center mb-12">
							<h2 class="text-5xl md:text-7xl font-bold text-gray-900 leading-tight mb-8">
								A Purpose Built<br />
								<span class="text-gray-900">Payments Platform</span>
							</h2>
							<div class="max-w-3xl mx-auto">
								<p class="text-lg md:text-xl text-gray-700 leading-relaxed mb-2">
									Built for innovators seeking a better payments solution.
								</p>
								<p class="text-lg md:text-xl text-gray-700 leading-relaxed">
									Highnote helps reduce costs, drive revenue, and optimize your business for success.
								</p>
							</div>
						</div>

						<!-- Platform Features Grid -->
						<div class="max-w-6xl mx-auto px-6 md:px-12 mt-16">
							<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
								<style>
									.spotlight-3d-card {
										transform-style: preserve-3d;
										transition: transform 0.3s ease, box-shadow 0.3s ease;
										box-shadow:
											0 10px 30px rgba(12, 47, 30, 0.15),
											0 5px 15px rgba(12, 47, 30, 0.1);
									}
									.spotlight-3d-card:hover {
										transform: translateY(-8px) scale(1.02);
										box-shadow:
											0 20px 50px rgba(12, 47, 30, 0.2),
											0 10px 25px rgba(255, 174, 155, 0.15);
									}
								</style>
								<!-- Card 1: Flexible Account Structures -->
								<SpotlightCard client:load className="spotlight-3d-card p-6 h-full flex flex-col gap-4 !bg-white !border-gray-200 !text-gray-900" spotlightColor="rgba(255, 174, 155, 0.15)">
									<div class="h-12 w-12 flex items-center justify-center rounded-lg bg-[#ffae9b]/10 border border-[#ffae9b]/30">
										<Layers className="text-[#0C2F1E] h-6 w-6" />
									</div>
									<div>
										<h3 class="text-lg font-semibold text-[#0C2F1E] mb-2">Flexible Account Structures</h3>
										<p class="text-sm text-gray-600 leading-relaxed">
											Our platform was designed to work with any business type and model, supporting your unique needs.
										</p>
									</div>
								</SpotlightCard>

								<!-- Card 2: Full Program Management -->
								<SpotlightCard client:load className="spotlight-3d-card p-6 h-full flex flex-col gap-4 !bg-white !border-gray-200 !text-gray-900" spotlightColor="rgba(255, 174, 155, 0.15)">
									<div class="h-12 w-12 flex items-center justify-center rounded-lg bg-[#0C2F1E]/10 border border-[#0C2F1E]/30">
										<ShieldCheck className="text-[#0C2F1E] h-6 w-6" />
									</div>
									<div>
										<h3 class="text-lg font-semibold text-[#0C2F1E] mb-2">Full Program Management</h3>
										<p class="text-sm text-gray-600 leading-relaxed">
											We are with you every step of the way, from implementation to ongoing program optimization.
										</p>
									</div>
								</SpotlightCard>

								<!-- Card 3: World-Class Dashboard -->
								<SpotlightCard client:load className="spotlight-3d-card p-6 h-full flex flex-col gap-4 !bg-white !border-gray-200 !text-gray-900" spotlightColor="rgba(255, 174, 155, 0.15)">
									<div class="h-12 w-12 flex items-center justify-center rounded-lg bg-[#ffae9b]/10 border border-[#ffae9b]/30">
										<Zap className="text-[#ffae9b] h-6 w-6" />
									</div>
									<div>
										<h3 class="text-lg font-semibold text-[#0C2F1E] mb-2">World-Class Dashboard</h3>
										<p class="text-sm text-gray-600 leading-relaxed">
											Streamline your operations and support your customers from our user-friendly Dashboard.
										</p>
									</div>
								</SpotlightCard>

								<!-- Card 4: Designed for Scale -->
								<SpotlightCard client:load className="spotlight-3d-card p-6 h-full flex flex-col gap-4 !bg-white !border-gray-200 !text-gray-900" spotlightColor="rgba(255, 174, 155, 0.15)">
									<div class="h-12 w-12 flex items-center justify-center rounded-lg bg-[#0C2F1E]/10 border border-[#0C2F1E]/30">
										<TrendingUp className="text-[#0C2F1E] h-6 w-6" />
									</div>
									<div>
										<h3 class="text-lg font-semibold text-[#0C2F1E] mb-2">Designed for Scale</h3>
										<p class="text-sm text-gray-600 leading-relaxed">
											Our secure platform scales with you and is trusted by developers, startups, and large corporations.
										</p>
									</div>
								</SpotlightCard>
							</div>
						</div>
					</div>
				</section>

				<!-- Horizontal Scrolling Cards Section -->
				<HorizontalCards client:load />

				<!-- Footer -->
				<footer class="w-full px-6 py-8 md:px-12 border-t border-gray-200 bg-white/50 backdrop-blur-sm">
					<div class="max-w-7xl mx-auto flex flex-col md:flex-row items-center justify-between gap-4">
						<p class="text-gray-600 text-sm">
							Â© 2025 Panasa. Built with Astro, React & Tailwind CSS.
						</p>
						<div class="flex items-center gap-6">
							<a href="#" class="text-gray-600 hover:text-[#0C2F1E] transition-colors">GitHub</a>
							<a href="#" class="text-gray-600 hover:text-[#0C2F1E] transition-colors">Twitter</a>
							<a href="#" class="text-gray-600 hover:text-[#0C2F1E] transition-colors">LinkedIn</a>
						</div>
					</div>
				</footer>
			</div>
		</InfiniteGridBackground>
	</body>
</html>
